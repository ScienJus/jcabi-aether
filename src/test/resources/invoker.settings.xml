<?xml version="1.0"?>
<settings>
    <servers>
        <server>
            <id>aether-test.jcabi.com</id>
            <username>${aether-test.aws.key}</username>
            <password>${aether-test.aws.secret}</password>
        </server>
        <server>
            <id>repo.s3auth.com</id>
            <username>${aether-test.aws.key}</username>
            <password>${aether-test.aws.secret}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>it-repo</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>local.central</id>
                    <url>@localRepositoryUrl@</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>local.central</id>
                    <url>@localRepositoryUrl@</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
</settings>
